<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunnotes.shouyibao"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar"
    android:versionCode="11"
    android:versionName="1.0.11" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.sunnotes.shouyibao.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.HomeActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.GuideActivity"
            android:label="@string/title_activity_guide" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.view.MyWebView"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.FundHistoryActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.FundDetailActivity"
            android:label="@string/title_activity_fund_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.CompareActivity"
            android:label="@string/title_activity_compare" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.DrinkActivity"
            android:label="@string/title_activity_drink" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.FeedbackActivity"
            android:label="@string/title_activity_feedback" >
        </activity>
        <activity
            android:name="com.sunnotes.shouyibao.update.UpdateActivity"
            android:label="@string/title_activity_update" >
        </activity>

        <service android:name="com.sunnotes.shouyibao.service.SyncService" >
        </service>
    </application>

</manifest>